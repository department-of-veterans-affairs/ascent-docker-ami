{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "ami_version": "{{timestamp}}",
    "consul_ami_version": "*",
    "image_type": null,
    "consul_version": "1.0.7",
    "consul_module_version": "v0.3.3"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "name": "ascent-base-{{user `consul_ami_version`}}"
        },
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "docker-{{user `image_type`}}-{{user `ami_version`}}",
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_type": "gp2",
          "volume_size": 500
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "volume_size": 500,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "docker-{{user `image_type`}}-{{user `ami_version`}}"
      },
      "snapshot_tags": 
      {
        "Name": "docker-{{user `image_type`}}-{{user `ami_version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
          "sudo yum -y update"
      ]
    },
    {
      "type": "shell",
      "inline": [
          "sudo yum -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm",
          "sudo yum -y install git python-pip",
          "git clone --branch {{user `consul_module_version`}} https://github.com/hashicorp/terraform-aws-consul.git /tmp/terraform-aws-consul",
          "/tmp/terraform-aws-consul/modules/install-consul/install-consul --version {{user `consul_version`}}",
          "/tmp/terraform-aws-consul/modules/install-dnsmasq/install-dnsmasq"
      ],
      "pause_before": "30s"
    },
    {
      "type": "file",
      "source": "sysctl.d",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "daemon.json",
      "destination": "/tmp/daemon.json"
    },
    {
     "type": "file",
     "source": "docker-thinpool.profile",
     "destination": "/tmp/docker-thinpool.profile"
    },
    {
     "type": "file",
     "source": "swarm.sh",
     "destination": "/tmp/swarm.sh"
    },
    {
      "type": "file",
      "source": "registries.conf",
      "destination": "/tmp/registries.conf"
     },
     {
      "type": "file",
      "source": "./certificates/",
      "destination": "/tmp"
     },
    {
      "type": "shell",
      "environment_vars": [
        "IMAGE_TYPE={{user `image_type`}}"
      ],
      "scripts": [
        "docker-lvm.sh",
        "install-docker.sh",
        "config-sysctl.sh"
      ]
    }
  ]
}
