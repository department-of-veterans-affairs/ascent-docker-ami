{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "ami_version": "{{timestamp}}",
    "base_ami_version": "*",
    "image_type": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "ascent-base-{{user `base_ami_version`}}"
        },
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "vets-docker-{{user `image_type`}} {{user `ami_version`}}",
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_type": "gp2",
          "volume_size": 500
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 500,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "vets-docker"
      },
      "snapshot_tags": 
      {
        "Name": "vets-docker"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
          "sudo yum -y update"
      ]
    },
    {
      "type": "file",
      "source": "sysctl.d",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "daemon.json",
      "destination": "/tmp/daemon.json"
    },
    {
     "type": "file",
     "source": "docker-thinpool.profile",
     "destination": "/tmp/docker-thinpool.profile"
    },
    {
     "type": "file",
     "source": "swarm.sh",
     "destination": "/tmp/swarm.sh"
    },
    {
     "type": "file",
     "source": "./consul-agent/",
     "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "registries.conf",
      "destination": "/tmp/registries.conf"
     },
     {
      "type": "file",
      "source": "./certificates/",
      "destination": "/tmp"
     },
    {
      "type": "shell",
      "environment_vars": [
        "IMAGE_TYPE={{user `image_type`}}"
      ],
      "scripts": [
        "docker-lvm.sh",
        "install-vault-ca.sh",
        "install-docker.sh",
        "install-consul.sh",
        "config-sysctl.sh"
      ]
    }
  ]
}
