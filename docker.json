{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "base_ami_id": null,
    "image_type": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `base_ami_id`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "vets-docker-{{user `image_type`}} {{timestamp}}",
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_type": "gp2",
          "volume_size": 20
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_type": "gp2",
          "volume_size": 20
        }
      ],
      "tags": {
        "Name": "vets-docker"
      },
      "snapshot_tags": 
      {
        "Name": "vets-docker"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "daemon.json",
      "destination": "/tmp/daemon.json"
    },
    {
     "type": "file",
     "source": "docker-thinpool.profile",
     "destination": "/tmp/docker-thinpool.profile"
    },
    {
     "type": "file",
     "source": "swarm.sh",
     "destination": "/tmp/swarm.sh"
    },
    {
     "type": "file",
     "source": "./consul-agent/",
     "destination": "/tmp"
    },
    {
      "type": "shell",
      "environment_vars": [
        "IMAGE_TYPE={{user `image_type`}}"
      ],
      "scripts": [
        "docker-lvm.sh",
        "install-docker.sh",
	"install-consul.sh"
      ]
    }
  ]
}
